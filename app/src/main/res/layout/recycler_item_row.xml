<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="commit"
            type="com.shakircam.gtafassesment.model.Commits.CommitsItem" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shado_black">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/titleTv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="@{commit.component2().message}"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:maxLines="2"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@id/titleTv"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@mipmap/ic_launcher"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nameTv"
            app:layout_constraintStart_toEndOf="@id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/titleTv"
            android:text="@{commit.component2().author.name}"
            android:textColor="#B6B0B0"
            android:textSize="11sp"
            android:layout_marginTop="13dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/timeTv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@{commit.component2().author.date}"
            android:textSize="11sp"
            android:textColor="#B6B0B0"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/nameTv"
            android:background="#404040"
            android:layout_marginTop="16dp"
            android:layout_height="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>